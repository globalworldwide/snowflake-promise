{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "es2022",
    "module": "Node16",
    "sourceMap": true,
    "lib": [],
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  }
}
